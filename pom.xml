<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.mule.modules</groupId>
	<artifactId>google-dfp-connector</artifactId>
	<version>1.1.0</version>
	<packaging>mule-module</packaging>
	<name>Mule GoogleDfp Anypoint Connector</name>


	<parent>
		<groupId>org.mule.tools.devkit</groupId>
		<artifactId>mule-devkit-parent</artifactId>
		<version>3.7.0</version>
	</parent>

	<properties>
		<category>Community</category>
		<junit.version>4.9</junit.version>
		<mockito.version>1.8.2</mockito.version>
		<jersey.version>1.16</jersey.version>
		<gson.version>2.2.2</gson.version>
		<category>Community</category>
		<licensePath>LICENSE.md</licensePath>
		<devkit.studio.package.skip>false</devkit.studio.package.skip>
		<api.version>2.0.0</api.version>
		<googledfp.version>v201505</googledfp.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>eclipse</groupId>
			<artifactId>eclipse-runtime</artifactId>
			<version>2.1.0</version>
			<scope>provided</scope>
		</dependency>

		<!-- Ads client library dependencies -->
		<dependency>
			<groupId>com.google.api-ads</groupId>
			<artifactId>ads-lib</artifactId>
			<version>${api.version}</version>
			<exclusions>
				<exclusion>
					<groupId>net.sf.opencsv</groupId>
					<artifactId>opencsv</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.google.api-ads</groupId>
			<artifactId>dfp-axis</artifactId>
			<version>${api.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>1.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<artifactSet>
                        <includes>
                            <include>com.google.api-ads:dfp-axis</include>
                        </includes>
                    </artifactSet>
                    <relocations>
                        <relocation>
                            <pattern>com.google.api.ads.dfp.axis.${googledfp.version}</pattern>
                            <shadedPattern>com.google.api.ads.dfp.axis.shaded</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>com.google.api.ads.dfp.axis.utils.${googledfp.version}</pattern>
                            <shadedPattern>com.google.api.ads.dfp.axis.utils.shaded</shadedPattern>
                        </relocation>
                    </relocations>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>mulesoft-releases</id>
			<name>MuleSoft Releases Repository</name>
			<url>http://repository.mulesoft.org/releases/</url>
			<layout>default</layout>
		</repository>
	</repositories>
</project>